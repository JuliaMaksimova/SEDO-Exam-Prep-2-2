pipeline {
    agent any

    stages {
        stage("Restore the dependencies") {
            steps {
                bat "dotnet restore" // For Windows
            }
        }

        stage("Build") {
            steps {
                bat "dotnet build --no-restore" // For Windows
            }
        }

        stage("Run the tests") {
            steps {
                bat "dotnet test --no-build --verbosity normal" // For Windows
            }
        }
    }
}